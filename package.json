{
  "name": "chainx-signer",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "dependencies": {
    "@chainx/types": "^2.22.31",
    "@chainx/ui": "^0.0.33",
    "@chainx/util": "^2.22.31",
    "@reduxjs/toolkit": "^1.0.4",
    "bignumber.js": "^9.0.0",
    "chainx.js": "^2.22.31",
    "clipboard": "^2.0.4",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "lodash.shuffle": "^4.2.0",
    "mock-socket": "^9.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.2.0",
    "react-tooltip": "^3.11.1",
    "redux": "^4.0.4",
    "semver": "^7.1.1",
    "ws": "^7.2.0"
  },
  "scripts": {
    "start": "PORT=3001 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3001 && electron .\"",
    "build-dist": "yarn build && rimraf dist && electron-builder",
    "dist": "rimraf dist && electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "wait-on": "^3.3.0"
  },
  "build": {
    "extends": null,
    "productName": "ChainX Signer",
    "appId": "org.chainx.signer",
    "files": [
      "preload.js",
      "electron.js",
      "build",
      "server",
      "package.json",
      "resources"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "app": "./",
      "buildResources": "./resources"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
